{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/main",
        "sourceMap": true,
        "mapRoot": "dist/main",
        "rootDir": "src/main",
        "target": "es5"
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/main/**/*.ts"
    ]
}
